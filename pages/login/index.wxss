page {
  height: 100%;
}

.viewport {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 20rpx 40rpx;
}

.logo {
  flex: 1;
  text-align: center;
}

.logo image {
  width: 200rpx;
  height: 200rpx;
  margin-top: 100rpx;
}

.login {
  height: 600rpx;
  padding: 40rpx 20rpx 20rpx;
  border-top: 2rpx solid #ddd;
  position: relative;
}

.login .caption {
  width: 440rpx;
  text-align: center;
  line-height: 1.4;
  font-size: 24rpx;
  color: #999;
  transform: translate(-50%);
  background-color: #fff;
  
  position: absolute;
  left: 50%;
  top: -35rpx;
}

.login .caption text {
  color: #CF4444;
  display: block;
}

.login .button {
  display: flex;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 210rpx;
  margin-top: 60rpx;
  font-size: 28rpx;
  border-radius: 72rpx;
  color: #666;
  border: 1rpx solid #666;
}

.login .danger {
  color: #CF4444;
  border-color: #CF4444;
}

.login .primary {
  color: #06c05f;
  border-color: #06c05f;
}

.login .button .icon {
  font-size: 40rpx;
  margin-right: 6rpx;
}

.login .tips {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
  font-size: 22rpx;
  color: #999;
  text-align: center;
}